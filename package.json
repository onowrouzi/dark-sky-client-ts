{
  "name": "dark-sky-client-ts",
  "description": "Simple typescript wrapper for dark sky weather api.",
  "version": "1.0.12",
  "author": "Omid Nowrouzi <onowrouzi@outlook.com>",
  "license": "UNLICENSED",
  "keywords": [
    "weather",
    "darksky",
    "dark sky",
    "api library",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/onowrouzi/dark-sky-client-ts/issues"
  },
  "homepage": "https://github.com/onowrouzi/dark-sky-client-ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onowrouzi/dark-sky-client-ts.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "start": "tsc && node .",
    "build": "tsc",
    "test": "tsc && jest --env=node",
    "prepublishOnly": "tsc -p ./ --outDir dist/"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "html",
      "json"
    ]
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "fetch-jsonp": "^1.1.3"
  },
  "devDependencies": {
    "@types/fetch-jsonp": "^1.0.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/request-promise-native": "^1.0.16",
    "@types/typescript": "^2.0.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  }
}
